@model IEnumerable<Ecommerce_Vestuario_REVIEW.Models.Customer>

@{
	ViewBag.Title = "Clientes";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("New Customer", "New", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-hover" id="customers">
	<thead>
		<tr>
			<th>Id</th>
			<th>Nome</th>
			<th>Cadastro</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var customer in Model)
		{
			<tr>
				<th scope="row">@customer.Id</th>
				<td>@Html.ActionLink(@customer.Nome, "Details", new { customer.Id })</td>
				<td>@customer.DataCadastro</td>
                <td>@Html.ActionLink("Editar", "Edit", new { customer.Id}, new {@class = "btn btn-primary" })</td>
                <td>
                    <button data-customer-id=@customer.Id class="btn-link js-delete">Deletar</button>
                </td>
			</tr>
		}
	</tbody>
</table>

@section scripts
{
    <script>
   
        $("#customers").on("click", ".js-delete",
           function () {
               var button = $(this);
               bootbox.confirm("Tem certeza que quer exluir o registro?", function (result) {
                   if (result) {
                       $.ajax({
                           url: "/customer/delete/" + button.attr("data-customer-id"),
                           method: "GET",
                           success: function () {
                               button.parents("tr").remove();
                           }
                       });
                   }
               });
           });
    
    </script>
}
       

